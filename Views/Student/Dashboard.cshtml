@model Book2Enter.Models.DashboardViewModel
@{
    Layout = null;
    var env = Context.RequestServices.GetService<Microsoft.AspNetCore.Hosting.IWebHostEnvironment>();
    var wwwroot = env?.WebRootPath ?? "";
    Func<string,string> t = file => {
        var p = System.IO.Path.Combine(wwwroot, "images", file);
        return System.IO.File.Exists(p) ? System.IO.File.GetLastWriteTimeUtc(p).Ticks.ToString() : "0";
    };
    var vLogo = t("B2E_Logo_Final.jpg");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Student Dashboard ‚Äì Book2Enter</title>
    <style>
        /* Header/footer styles copied from Home (kept identical) */
        :root{--primary:#1fffd6;--bg:#020b10;--muted:#9fb8c2}
        *{box-sizing:border-box}
        body{margin:0;font-family:"Segoe UI",sans-serif;background:var(--bg);color:#fff}
        .site-header{position:sticky;top:0;z-index:20;background:transparent}
        .site-header .container{width:100%;max-width:none;padding:10px 32px;display:flex;align-items:center;justify-content:space-between}
        .brand{display:flex;align-items:center;gap:12px}
        .logo-img{width:36px;height:36px;object-fit:cover;border-radius:50%}
        .brand-name{color:var(--primary);font-weight:700;font-size:18px}
        .nav{display:flex;gap:12px;align-items:center}
        .nav a{color:var(--muted);text-decoration:none;font-size:14px;opacity:.95}
        .nav a.active{color:var(--primary)}
        .nav-cta{background:transparent;padding:6px 8px;border-radius:6px;color:var(--muted);font-weight:600}
        .header-right{display:flex;align-items:center;gap:12px}
        .login-cta{display:inline-block;padding:10px 20px;border-radius:28px;background:linear-gradient(90deg,#1fffd6,#00d6ad);color:#000;font-weight:700;text-decoration:none}
        .footer{ text-align:center;padding:15px;background:#000;opacity:.7;font-size:13px }

        /* Dashboard styles (kept simple, re-used button classes from provided code) */
        .dashboard{max-width:1100px;margin:36px auto;padding:0 20px}
        .status-cards{display:grid;grid-template-columns:repeat(auto-fit,minmax(160px,1fr));gap:18px;margin-bottom:22px}
        .card{background:linear-gradient(180deg,#07161d,#020b10);padding:20px;border-radius:12px;border:1px solid rgba(255,255,255,0.03);text-align:center}
        .card h3{margin:0;font-size:14px}
        .card h1{margin:10px 0 0;font-size:30px}

        .event-box{display:flex;justify-content:space-between;align-items:center;background:linear-gradient(180deg,#07161d,#020b10);padding:18px;border-radius:12px;border:1px solid rgba(255,255,255,0.03)}
        .actions{display:flex;gap:10px}
        .btn-primary{background:linear-gradient(90deg,#1fffd6,#00d6ad);border:none;padding:10px 14px;border-radius:8px;color:#000;font-weight:700}
        .btn-secondary{background:transparent;border:1px solid rgba(255,255,255,0.06);padding:10px 14px;border-radius:8px;color:#dff7f3}

        .bookings{margin-top:18px}
        .booking-card{display:flex;align-items:center;justify-content:space-between;padding:12px;border-radius:12px;background:linear-gradient(180deg,rgba(255,255,255,0.02),rgba(255,255,255,0.01));border:1px solid rgba(255,255,255,0.03);margin-bottom:10px}
        .badge{padding:6px 8px;border-radius:8px;font-weight:700}
        .badge.booked{background:linear-gradient(90deg,#ffd966,#ffb366);color:#000}
        .badge.attended{background:#2bffb8;color:#000}

        .pass-box{background:linear-gradient(180deg, #07161d,#020b10);padding:16px;border-radius:12px;border:1px solid rgba(255,255,255,0.03);display:flex;align-items:center;justify-content:space-between}

        .available{margin-top:18px}
        .event-list{display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:12px}
        .event-card{background:linear-gradient(180deg,rgba(255,255,255,0.02),rgba(255,255,255,0.01));padding:12px;border-radius:10px}

        @@media(max-width:900px){.event-box{flex-direction:column;align-items:flex-start}.actions{width:100%;justify-content:flex-start}}
    </style>
</head>
<body>

<!-- HEADER (same as Home) -->
<header class="site-header">
    <div class="container header-inner">
        <div class="brand">
            <img src="~/images/B2E_Logo_Final.jpg?v=@(vLogo)" alt="Book2Enter" class="logo-img" />
            <span class="brand-name">Book2Enter</span>
        </div>

        <div class="header-right">
            <nav class="nav">
                <a asp-controller="Home" asp-action="Index" class="nav-cta">Home</a>
                <a asp-controller="Home" asp-action="About" class="nav-cta">About us</a>
            </nav>

            <div class="header-actions">
                <a asp-controller="Home" asp-action="Login" class="login-cta">Login</a>
            </div>
        </div>
    </div>
</header>

<main class="dashboard">
    <h1 style="margin-bottom:14px">Welcome, @Model.StudentName</h1>

    <!-- QUICK SUMMARY CARDS -->
    <section class="status-cards">
        <div class="card">
            <h3>üìÖ Upcoming Events</h3>
            <h1>@Model.UpcomingEventsCount</h1>
        </div>
        <div class="card">
            <h3>üéü Booked Events</h3>
            <h1>@Model.BookedEventsCount</h1>
        </div>
        <div class="card">
            <h3>üîì Active Entries</h3>
            <h1>@Model.ActiveEntriesCount</h1>
        </div>
        <div class="card">
            <h3>‚è≥ Pending Actions</h3>
            <h1>@Model.PendingActionsCount</h1>
        </div>
    </section>

    <!-- UPCOMING EVENT (FOCUS AREA) -->
    <section class="upcoming">
        <h2>My Upcoming Event</h2>
        <div class="event-box">
            <div>
                <h3>@Model.NextEvent?.Name</h3>
                <p><strong>Date:</strong> @Model.NextEvent?.StartUtc.ToLocalTime().ToString("dd MMM ‚Ä¢ hh:mm tt")</p>
                <p><strong>Venue:</strong> @Model.NextEvent?.Venue</p>
                <p><strong>Status:</strong> üü¢ Entry Open</p>
            </div>
            <div class="actions">
                <a class="btn-primary" href="@Url.Action("BookingQr", "Student", new { id = Model.NextEvent?.Id ?? 0 })">View Entry Pass</a>
                <button class="btn-secondary">Event Details</button>
            </div>
        </div>
    </section>

    <!-- BOOKINGS -->
    <section class="bookings">
        <h2>My Bookings</h2>
        @foreach(var b in Model.Bookings)
        {
            <div class="booking-card">
                <div>
                    <h4 style="margin:0">@b.EventName</h4>
                    <small style="color:var(--muted)">@b.EventStartUtc.ToLocalTime().ToString("dd MMM ‚Äî hh:mm tt")</small>
                </div>
                <div style="display:flex;align-items:center;gap:10px">
                    <span class="badge @(b.Status=="Booked"?"booked":"attended")">@b.Status</span>
                    <a class="btn-secondary" href="@Url.Action("BookingQr", "Student", new { id = b.BookingId })">View Pass</a>
                </div>
            </div>
        }
    </section>

    <!-- ENTRY PASS STATUS -->
    <section class="entry-status">
        <h2>Entry Pass Status</h2>
        <div class="pass-box">
            <p>Your entry pass activates 30 minutes before the event.</p>
            <span class="status locked">üîí Locked</span>
            <a class="btn-primary" href="#">Open Entry Pass</a>
        </div>
    </section>

    <!-- AVAILABLE EVENTS -->
    <section class="available">
        <h2>Available Events</h2>
        <div class="event-list">
            @foreach(var e in Model.AvailableEvents)
            {
                <div class="event-card">
                    <h4 style="margin:0">@e.Name</h4>
                    <p style="color:var(--muted);margin:6px 0">@e.Date.ToLocalTime().ToString("dd MMM ‚Äî HH:mm")</p>
                    <button class="btn-secondary">Book Now</button>
                </div>
            }
        </div>
    </section>
</main>

<!-- FOOTER (same as Home) -->
<div class="footer">¬© 2026 Book2Enter ¬∑ All Rights Reserved</div>

</body>
</html>